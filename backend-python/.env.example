# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/liftlog_user_data
RATE_LIMIT_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/liftlog_rate_limit

# Environment
ENVIRONMENT=development
DEBUG=true
TEST_MODE=false

# CORS
CORS_ORIGINS=*

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Purchase Verification - Google Play
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
GOOGLE_PACKAGE_NAME=com.liftlog.app

# Purchase Verification - Apple App Store
APPLE_BUNDLE_ID=com.liftlog.app
APPLE_SHARED_SECRET=your-apple-shared-secret

# Purchase Verification - RevenueCat
REVENUECAT_API_KEY=your-revenuecat-api-key
REVENUECAT_PUBLIC_KEY=your-revenuecat-public-key

# Purchase Verification - Web Auth
WEB_AUTH_SECRET_KEY=your-web-auth-secret-key

# Rate Limiting
RATE_LIMIT_WEB_PER_DAY=100
RATE_LIMIT_MOBILE_PER_DAY=20

# Cleanup Service
CLEANUP_INTERVAL_MINUTES=60

# Logging
LOG_LEVEL=INFO
