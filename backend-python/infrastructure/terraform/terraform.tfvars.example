# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values

# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Environment (staging or production)
environment = "staging"

# Cloud SQL Configuration
db_tier     = "db-f1-micro" # For production, use db-custom-2-7680 or higher
db_password = "your-secure-database-password"

# Cloud Run Configuration
service_name    = "liftlog-python-backend"
container_image = "ghcr.io/your-org/liftlog/python-backend:latest"

# Secrets (optional - can also be set via Secret Manager UI)
# Leave empty to create secrets manually via gcloud
openai_api_key                     = ""
web_auth_api_key                   = ""
google_play_service_account_email  = ""
google_play_service_account_key    = ""
